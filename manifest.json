{
  "manifest_version": 3,
  "name": "swimlanesio-links",
  "description": "A chrome extension for working with VSCode links and GitHub permalinks in swimlanes.io",
  "version": "0.1",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.swimlanes.io/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*.swimlanes.io/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
