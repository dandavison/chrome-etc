{
  "manifest_version": 3,
  "name": "dan-chrome-etc",
  "description": "Chrome extension for anything",
  "version": "0.1",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": [
        "content/github-comment-editor.js",
        "content/github-fullwidth.js",
        "content/github-mermaid-cleaner.js",
        "content/github-comment-fold.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://viewscreen.githubusercontent.com/*"],
      "js": ["content/github-mermaid-cleaner.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://www.keybr.com/*"],
      "js": ["content/keybr-finger-colors.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting", "activeTab", "webNavigation", "tabs", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "http://wormhole:7117/*",
    "https://temporaltechnologies.slack.com/*",
    "https://temporalio.slack.com/*"
  ],
  "action": {
    "default_title": "dan-chrome-etc",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png"
    }
  }
}